// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // id        String   @id @default(uuid())
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstname        String
  lastname         String
  email            String  @unique
  image            String
  pincode          String?
  phone            String?
  permanentAddress String?
  tasks            Task[]
  // bills            Bill[]
}

enum TaskSize {
  small
  medium
  large
}

enum TaskStatus {
  open
  in_progress
  done
  cancelled
}

enum TaskType {
  cleaning
  moving
  electrician
  painter
  cook
  mechanic
  plumber
  driver
  technician
  mounting
}

enum Stars {
  one
  two
  three
  four
  five
}

model Rating {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId      String
  taskId      String
  stars       Stars
  userComment String
  task        Task[]
  Tasker      Tasker[]
}

model Task {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // title       String
  description String
  dueDate     DateTime?
  location    String
  pincode     String
  user        User      @relation(fields: [userId], references: [id])

  taskerInContact   Tasker  @relation("TASKER_IN_CONTACT", fields: [taskerInContactId], references: [id])
  taskerInContactId String
  taskerAssigned    Tasker? @relation("TASKER_ASSIGNED", fields: [taskerAssignedId], references: [id])
  taskerAssignedId  String?
  // bills        Bill[]

  size   TaskSize
  status TaskStatus

  category TaskType
  isPaymentDone  Boolean  @default(false)

  rating Rating? @relation(fields: [ratingId], references: [id])

  userId   String
  ratingId String?
}

model admin {
  // id        String   @id @default(uuid())
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstname        String
  lastname         String
  email            String  @unique
  image            String?
  phone            String?
  permanentAddress String?
}

model Tasker {
  // id        String   @id @default(uuid())
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstname        String
  lastname         String
  email            String  @unique
  image            String
  pincode          String?
  phone            String?
  permanentAddress String?
  // tasks            Task[]

  pricePerHourInRs Int?

  ratings Rating? @relation(fields: [ratingId], references: [id])

  experience String?
  category   TaskType?

  isVerified        Boolean // documents are verified by admin
  hasPaidOneTimeFee Boolean
  isActive          Boolean // isActive is true when the tasker is available for tasks

  inContact Task[] @relation("TASKER_IN_CONTACT")
  assigned  Task[] @relation("TASKER_ASSIGNED")
  ratingId  String?
}
